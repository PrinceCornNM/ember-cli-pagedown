</div>

<h2>Examples</h2>

<h3 id="pd-converter">helper:pd-converter</h3>

<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Inline Text</h3>
  </div>
  <div class="panel-body">
    {{pd-converter "*italics* **bold**"}}
    <pre>
      \{{pd-converter "*italics* **bold**"}}
    </pre>
  </div>
</div>

<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Computed Property</h3>
  </div>
  <div class="panel-body">
    {{pd-converter computedProperty}}
    <pre>
      computedProperty: function() {
        return '###h3\n' + 
               '[example link](http://example.org/)' + 
               '\n\n> example quote';
      }.property()

      \{{pd-converter computedProperty}}
    </pre>
  </div>
</div>

